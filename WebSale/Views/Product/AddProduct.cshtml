@model WebSale.Models.Product

<h1 class="text-center mt-4">Add New Product</h1>

<div class="card shadow-sm mx-auto" style="max-width: 600px;">
    <div class="card-body">
        <form asp-action="AddProduct" asp-controller="Product" method="post">
            <div class="mb-3">
                <label for="Name" class="form-label">Product Name</label>
                <input type="text" class="form-control" id="Name" name="Name" placeholder="Enter product name" required>
            </div>
            <div class="mb-3">
                <label for="Category" class="form-label">Category</label>
                <input type="text" class="form-control" id="Category" name="Category" placeholder="Enter product category" required>
            </div>
            <div class="mb-3">
                <label for="Price" class="form-label">Price</label>
                <input type="number" class="form-control" id="Price" name="Price" step="0.01" placeholder="Enter product price" required>
            </div>
            <div class="mb-3">
                <label for="Description" class="form-label">Description</label>
                <textarea class="form-control" id="Description" name="Description" rows="3" placeholder="Enter product description"></textarea>
            </div>
            <button type="submit" class="btn btn-success w-100">Add Product</button>
        </form>
    </div>
</div>
