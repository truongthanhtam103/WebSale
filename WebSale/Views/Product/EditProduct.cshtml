@model WebSale.Models.Product

<h1 class="text-center mt-4">Edit Product</h1>
<form method="post" asp-action="EditProduct">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="mb-3">
        <label for="name" class="form-label">Product Name</label>
        <input type="text" name="Name" value="@Model.Name" class="form-control" required />
    </div>
    <div class="mb-3">
        <label for="category" class="form-label">Category</label>
        <input type="text" name="Category" value="@Model.Category" class="form-control" required />
    </div>
    <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input type="number" name="Price" value="@Model.Price" step="0.01" class="form-control" required />
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="Description" class="form-control" rows="3">@Model.Description</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
