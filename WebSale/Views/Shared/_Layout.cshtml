<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">WebSale</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    @if (ViewContext.HttpContext.Session.GetString("Username") == null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/User/Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/User/Register">Register</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="accountDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Welcome, @ViewContext.HttpContext.Session.GetString("Username")!
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="accountDropdown">
                                @if (ViewContext.HttpContext.Session.GetString("IsAdmin") == "True")
                                {
                                    <li>
                                        <a class="dropdown-item" href="/Product/ManageProducts">Manage Products</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="/Account/ManageUsers">Manage Users</a>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <a class="dropdown-item" href="/Cart/ViewCart">View Cart</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="/Order/History">Purchase History</a>
                                    </li>
                                }

                                <li>
                                    <a class="dropdown-item" href="/Account/UpdateAccount">Update Account Information</a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form method="post" asp-action="Logout" asp-controller="User" class="d-inline">
                                        <button type="submit" class="dropdown-item">Logout</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>


    <main class="container mt-4">
        <!-- Nội dung các View con sẽ hiển thị tại đây -->
        @RenderBody()
    </main>

    <footer class="footer mt-4">
        <div class="container">
            <p class="text-muted text-center">&copy; 2024 WebSale</p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
